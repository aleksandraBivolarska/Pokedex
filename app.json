{
  "expo": {
    "name": "Pokedex",
    "slug": "Pokedex",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/main-icon.png",
    "scheme": "pokedex",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/main-icon.png",
        "backgroundImage": "./assets/images/main-icon.png",
        "monochromeImage": "./assets/images/main-icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.Pokedex"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/main-icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
          {
          "image": "./assets/images/loading-screen.png",
          "resizeMode": "cover",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-sqlite",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
